
@{
    ViewBag.Title = "Login";
}

<h2>登录</h2>
<div>
    @using (Html.BeginForm())
    {
    <table>
        <tr>
            <td>用户名：</td>
            <td>@Html.TextBox("username")</td>
        </tr>
        <tr>
            <td>密码：</td>
            <td>@Html.Password("pwd")</td>
        </tr>
        <tr>
            <td><input type="submit" value="登录"/></td>
        </tr>
    </table>
    }
</div>

